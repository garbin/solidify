{
  "name": "solidify.js",
  "version": "0.1.0",
  "description": "Solidify: Fast, solid, and seamless. Your all-in-one Node.js framework for CLI, ORM, REST, and GraphQL.",
  "type": "module",
  "main": "index.mjs",
  "files": [
    "lib",
    "index.mjs"
  ],
  "scripts": {
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky; fi",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "test": "c8 ava",
    "coverage": "c8 report --reporter=text-lcov > coverage/codecov.lcov"
  },
  "lint-staged": {
    "*.{js,jsx,mjs}": [
      "npm run lint -- --write"
    ]
  },
  "dependencies": {
    "@fastify/request-context": "^6.2.1",
    "@graphql-tools/schema": "^10.0.29",
    "commander": "^14.0.2",
    "dataloader": "^2.2.3",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.1.0",
    "graphql-scalars": "^1.25.0",
    "http-content-range-format": "^1.0.0",
    "http-errors": "^2.0.1",
    "inflected": "^2.1.0",
    "lodash-es": "^4.17.21",
    "mercurius": "^16.6.0",
    "objection": "^3.1.5",
    "range-specifier-parser": "^1.0.2",
    "yup": "^1.7.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@faker-js/faker": "^10.1.0",
    "ava": "^6.4.1",
    "c8": "^10.1.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "mercurius-integration-testing": "^9.0.1",
    "sqlite3": "^5.1.7"
  },
  "repository": "garbin/solidify",
  "homepage": "https://github.com/garbin/solidify",
  "bugs": "https://github.com/garbin/solidify/issues",
  "keywords": [
    "fastify",
    "web",
    "framework",
    "rest",
    "graphql",
    "objection",
    "orm"
  ],
  "author": "Garbin Huang<garbinh@gmail.com>",
  "license": "MIT"
}
